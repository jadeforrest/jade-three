---
import SpotifyIcon from './icons/SpotifyIcon.astro';
import AppleMusicIcon from './icons/AppleMusicIcon.astro';
import AmazonMusicIcon from './icons/AmazonMusicIcon.astro';
import YouTubeIcon from './icons/YouTubeIcon.astro';

interface Props {
  spotifyUrl: string;
  appleMusicUrl: string | null;
  amazonMusicUrl: string | null;
  youtubeUrl: string | null;
  size?: number;
  class?: string;
}

const {
  spotifyUrl,
  appleMusicUrl,
  amazonMusicUrl,
  youtubeUrl,
  size = 20,
  class: className = '',
} = Astro.props;
---
<div class:list={['flex items-center gap-3', className]}>
  <a
    href={spotifyUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="text-spotify hover:opacity-75 transition-opacity duration-200"
    title="Listen on Spotify"
  >
    <SpotifyIcon size={size} />
  </a>

  {appleMusicUrl && (
    <a
      href={appleMusicUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="text-apple hover:opacity-75 transition-opacity duration-200"
      title="Listen on Apple Music"
    >
      <AppleMusicIcon size={size} />
    </a>
  )}

  {amazonMusicUrl && (
    <a
      href={amazonMusicUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="text-amazon hover:opacity-75 transition-opacity duration-200"
      title="Listen on Amazon Music"
    >
      <AmazonMusicIcon size={size} />
    </a>
  )}

  {youtubeUrl && (
    <a
      href={youtubeUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="text-youtube hover:opacity-75 transition-opacity duration-200"
      title="Watch on YouTube"
    >
      <YouTubeIcon size={size} />
    </a>
  )}
</div>
