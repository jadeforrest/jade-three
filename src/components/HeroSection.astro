---
import { Image } from 'astro:assets';
import artistPhoto from '../assets/artist.png';

interface Props {
  artistName: string;
}
const { artistName } = Astro.props;
---
<section
  class="relative overflow-hidden"
  style="background: radial-gradient(ellipse at center, #2d1f4a 0%, #0a0a0f 70%);"
>
  <!-- Subtle decorative ring -->
  <div
    class="absolute inset-0 pointer-events-none"
    aria-hidden="true"
    style="background: radial-gradient(ellipse 60% 40% at 50% 50%, rgba(124,77,189,0.08) 0%, transparent 70%);"
  ></div>

  <div class="relative max-w-5xl mx-auto px-6 flex flex-col lg:flex-row items-center lg:items-end gap-8 py-28">
    <!-- Text -->
    <div class="flex-1 text-center lg:text-left">
      <p class="font-display text-xs font-medium uppercase tracking-[0.25em] text-accent mb-5">
        Music
      </p>
      <h1 class="font-display text-5xl sm:text-7xl font-bold text-text-primary leading-none tracking-tight">
        {artistName}
      </h1>
      <p class="mt-6 text-text-muted text-base max-w-sm mx-auto lg:mx-0">
        Electronic downtempo soundscapes from Portland, Oregon.
      </p>
      <a
        href="#releases"
        class="mt-10 inline-flex items-center gap-2 px-6 py-2.5 rounded-full border border-accent/40 text-sm font-medium text-accent hover:bg-accent/10 transition-colors duration-200"
      >
        Listen
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M12 5v14M5 12l7 7 7-7"/>
        </svg>
      </a>
    </div>

    <!-- Artist photo -->
    <div class="shrink-0 w-64 sm:w-80 lg:w-96">
      <Image
        src={artistPhoto}
        alt="Jade Three"
        class="w-full h-auto drop-shadow-2xl"
      />
    </div>
  </div>
</section>
